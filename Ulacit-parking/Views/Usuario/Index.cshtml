@model  List<Ulacit_parking.Models.ViewModels.VehicleViewModel>

@{
    ViewBag.Title = "Mis Vehículos";
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-5">
    <h2 class="text-center mb-4 text-primary">Mis Vehículos</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">
            No tienes vehículos registrados.
        </div>
    }
    else
    {
        <div class="table-responsive shadow rounded">
            <table class="table table-hover align-middle table-bordered mb-0">
                <thead class="table-dark text-center">
                    <tr>
                        <th scope="col">Marca</th>
                        <th scope="col">Color</th>
                        <th scope="col">Placa</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">¿Espacio especial?</th>
                        <th scope="col">Historial</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var vehiculo in Model)
                    {
                        <tr>
                            <td>@vehiculo.Brand</td>
                            <td>@vehiculo.Color</td>
                            <td>@vehiculo.LicensePlate</td>
                            <td>@vehiculo.VehicleType</td>
                            <td>
                                @if (vehiculo.UsesSpecialSpace)
                                {
                                    <span class="badge bg-success">Sí</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Historial", "Usuario", new { id = vehiculo.Id })"
                                   class="btn btn-sm btn-primary">
                                    Ver
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
